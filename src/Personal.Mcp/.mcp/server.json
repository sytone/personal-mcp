{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-29/server.schema.json",
  "description": "Personal MCP Server - Interact with Obsidian vaults, manage notes, links, tags, and more",
  "name": "io.github.sytone/obsidian-mcp",
  "version": "0.1.0",
  "packages": [
    {
      "registryType": "nuget",
      "identifier": "Sytone.Personal.Mcp",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      },
      "packageArguments": [],
      "environmentVariables": [
        {
          "name": "OBSIDIAN_VAULT_PATH",
          "description": "Path to the Obsidian vault",
          "is_required": true,
          "is_secret": false
        }
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/sytone/obsidian-mcp",
    "source": "github"
  }
}